@model List<BlogIt.DataModel.Models.Blog>
<!-- blog -->
<div class="blog" id="blog">
    <div class="container">
        <div class="default-heading">
            <!-- heading -->
            <h2>@ViewBag.Message</h2>
        </div>
        @if (Model != null && Model.Count > 0)
        {
            <div class="row">
                @foreach (var blog in Model)
                {
                    <div class="col-md-6 col-sm-6">
                        <!-- blog entry -->
                        <div class="entry">
                            <!-- blog entry image -->
                            <img class="img-responsive" src="~/img/blog/1.jpg" alt="Blog" />
                            <!-- heading / blog post title -->
                            <h3>@blog.Tilte</h3>
                            <!-- blog information -->
                            <span class="meta">
                                @blog.Date | Tag: @blog.Tag
                            </span>
                            <!-- paragraph -->
                            <p>@blog.Description</p>
                            <div>
                                @Html.ActionLink("View", "Details", "Blog", new { id = blog.Id }, null)
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>There are no Blogs</p>
        }
    </div>
</div>
<!-- blog end -->
